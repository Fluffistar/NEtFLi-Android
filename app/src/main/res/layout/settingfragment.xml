<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor"
    android:id="@+id/settingfragment"
    tools:context=".ui.settings.SettingFragment">





                <TextView
                   android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autoplay Specialepisodes"
                    android:id="@+id/labelautospecial"
                    android:textColor="@color/white"
                    />
                <androidx.appcompat.widget.SwitchCompat
                     android:layout_alignTop="@id/labelautospecial"
                    android:layout_toRightOf="@id/labelautospecial"
                    android:id="@+id/autoplay_settings"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:checked="false"
                    android:longClickable="false"
                    android:textSize="4dp"
                    app:theme="@style/Theme.NEtFLi"
                    app:showText="false"
                    android:textOff="OFF"
                    android:textOn="ON" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/updatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for Update"
        android:textSize="26dp"
        android:backgroundTint="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
         />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    package="io.fluffistar.NEtFLi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
       android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2_round"
        android:supportsRtl="true"

        android:usesCleartextTraffic="true">

        <activity android:name=".SplashScreen" android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Videoplayer"
            android:label="@string/title_activity_videoplayer"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity"
            android:theme="@style/Theme.NEtFLi.NoActionBar"
           />
        <activity
            android:name=".ui.LoginPage.LoginActivity"
            android:label="Login"
            android:theme="@style/Theme.NEtFLi.NoActionBar" />
        <activity
            android:name=".ui.SeriesPage.SeriesPage"
            android:label="@string/title_activity_series_page"
            android:theme="@style/Theme.NEtFLi.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.NEtFLi.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>